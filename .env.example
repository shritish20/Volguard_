# VolGuard Configuration
VG_ENV=PRODUCTION
VG_DRY_RUN=FALSE

# Upstox Credentials
UPSTOX_ACCESS_TOKEN=your_access_token_here
UPSTOX_CLIENT_ID=your_client_id
UPSTOX_CLIENT_SECRET=your_client_secret
UPSTOX_REDIRECT_URI=https://your_redirect_uri
UPSTOX_REFRESH_TOKEN=your_refresh_token

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Groq AI
GROQ_API_KEY=your_groq_api_key

# Trading Parameters
VG_BASE_CAPITAL=1000000
VG_MAX_LOSS_PER_TRADE=50000
VG_MAX_CAPITAL_PER_TRADE=300000
MAX_TRADES_PER_DAY=3
VG_MAX_DRAWDOWN_PCT=0.15

# System
VG_DB_PATH=/app/data/volguard.db
VG_LOG_DIR=/app/logs
PORT=8000
